## Build stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY package.json package-lock.json* .npmrc* ./
RUN npm ci
COPY . .
RUN npm run build

## Runtime stage
FROM nginx:alpine
LABEL org.opencontainers.image.source="https://github.com/your-org/ea-coder-mobile-app"
LABEL org.opencontainers.image.description="EA Coder Web - static build served via NGINX"
COPY --from=builder /app/dist /usr/share/nginx/html
COPY deploy/docker/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]